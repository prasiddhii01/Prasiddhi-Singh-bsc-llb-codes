//program to check whether a number is palindrome.
//developed by Prasiddhi  date 8/10/25
#include<stdio.h>
void main ()
{
    int reverse = 0, original, remainder,n;
    printf("Enter a number");
    scanf("%d",&n);
    original = n;
    while(n>0)
    {
        remainder = n% 10;
        reverse = reverse * 10 + remainder;
        n = n/10;
    }
    if(original==reverse)
    {
    printf("%d is a palindrome",original);
    }
    else 
    {
        printf("%d is not palindrome",original);
    }
}
